<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_border_size_lllarge"
        android:gravity="center"
        android:background="#34495e"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/dimen_font_size_xlarge"
            android:textColor="#1BBC9B"
            android:text="@string/mine" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_border_size_small">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_border_size_lsmall"
            android:layout_toRightOf="@id/iv_head"
            android:layout_centerVertical="true"
            android:text="@string/name"
            android:textSize="@dimen/dimen_font_size_large" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_head"
            android:layout_marginTop="@dimen/dimen_border_size_normal"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:background="#cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_demand"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_border_size_small">

        <RelativeLayout
            android:id="@+id/rl_demand"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_marginTop="@dimen/dimen_border_size_normal">

            <ImageView
                android:id="@+id/iv_demand"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/demand" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_demand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_border_size_lsmall"
            android:layout_toRightOf="@id/rl_demand"
            android:layout_centerVertical="true"
            android:text="@string/demand"
            android:textSize="@dimen/dimen_font_size_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_demand"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:layout_marginTop="@dimen/dimen_border_size_normal"
            android:background="#cccccc" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_supervise"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_border_size_small">

        <RelativeLayout
            android:id="@+id/rl_supervise"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_marginTop="@dimen/dimen_border_size_normal">

            <ImageView
                android:id="@+id/iv_supervise"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/supervise" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_supervise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_border_size_lsmall"
            android:layout_toRightOf="@id/rl_supervise"
            android:layout_centerVertical="true"
            android:text="@string/supervise"
            android:textSize="@dimen/dimen_font_size_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_supervise"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:layout_marginTop="@dimen/dimen_border_size_normal"
            android:background="#cccccc" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_border_size_small">

        <RelativeLayout
            android:id="@+id/rl_version"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_marginTop="@dimen/dimen_border_size_normal">

            <ImageView
                android:id="@+id/iv_version"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/version" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_border_size_lsmall"
            android:layout_toRightOf="@id/rl_version"
            android:layout_centerVertical="true"
            android:text="@string/version"
            android:textSize="@dimen/dimen_font_size_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_version"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:layout_marginTop="@dimen/dimen_border_size_normal"
            android:background="#cccccc" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_border_size_small">

        <RelativeLayout
            android:id="@+id/rl_about"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_marginTop="@dimen/dimen_border_size_normal">

            <ImageView
                android:id="@+id/iv_about"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/about_us" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_border_size_lsmall"
            android:layout_toRightOf="@id/rl_about"
            android:layout_centerVertical="true"
            android:text="@string/about_us"
            android:textSize="@dimen/dimen_font_size_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_about"
            android:layout_marginLeft="@dimen/dimen_border_size_normal"
            android:layout_marginRight="@dimen/dimen_border_size_normal"
            android:layout_marginTop="@dimen/dimen_border_size_normal"
            android:background="#cccccc" />
    </RelativeLayout>
</LinearLayout>
